Algoritmo "caminhao"
Var
   Cont: inteiro
   peso: real
   pesot: real

Inicio
   para Cont de 1 até 15 passo 1 faca
      escreva("informe o peso(kg) da caixa número", Cont, " :")
      leia(peso)
      pesot := pesot + peso
   fimpara

   escreval("O peso total das caixas é:", pesot, " Kg.")

Fimalgoritmo